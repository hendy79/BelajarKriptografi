<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu utama 'Belajar Kriptografi'"
        android:textColor="@color/fontC2"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:padding="16dp"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="Konverter ASCII"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_ascii_converter"
        android:background="@drawable/backgr"
        android:onClick="menu1"
        android:padding="8dp"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="Konverter Biner"
        android:background="@drawable/backgr"
        android:onClick="menu2"
        android:drawableTop="@drawable/ic_binary_converter"
        android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@drawable/ic_xor_converter"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="XOR - Text"
        android:background="@drawable/backgr"
        android:onClick="menu3"
        android:padding="8dp"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@drawable/ic_xor_ascii_converter"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="XOR - ASCII"
        android:background="@drawable/backgr"
        android:onClick="menu4"
        android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@drawable/ic_rsa_converter"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="Enkripsi RSA (Async)"
        android:background="@drawable/backgr"
        android:onClick="menu5"
        android:padding="8dp"/>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@drawable/ic_xor_photo_converter"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/fontC2"
        android:text="XOR - Text (Scanner)"
        android:background="@drawable/backgr"
        android:onClick="menu6"
        android:padding="8dp"/>
    </LinearLayout>
    <com.air.sdk.injector.AirBanner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>